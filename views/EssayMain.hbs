	<body>
		<div class="navbar">
			<a href="/" style="color:white;">Sign Out</a>
			<a href="profile?username=user123456" style="color:white;">Profile</a>
			<div class="dropdown">
				<button class="dropbtn">Menu
					<i class="fa fa-caret-down"></i>
				</button>
				<div class="dropdown-content">
					<a href="entry">Create Essay</a>
				</div>
			</div>
			<a href="/LoggedIn" style="color:white;">Home</a>
			<div class="logo">
				<img src="/images/read_me_logo.jpg" alt="Photo of Logo" />
			</div>
		</div>
		<div class="intropage">
		{{#each result}}
			<div class="essayinfo" id="essayinfo">
				<img class = "booklogo" src="../{{image}}" alt="Photo of Book" />
				<div class="essaytitle" id="essaytitle">
					<h1 id="title">{{essaytitle}}</h1>
					<p><b>Author: </b><h2>{{author}}</h2></p>
					
				</div>
			</div>
			<div class="essay" id="essay">
				{{essay}}
			</div>
		{{/each}}

			<div class="icons">
				<i onclick="#" class="fa fa-thumbs-up"></i>
				<p>Like</p>

			<div class="comment-container">
			  <h2>Post Your Comment</h2>
			  <form>
			   <textarea name="comment" class ="comment" id="comment" placeholder='Add Your Comment...'></textarea>
			   <input class='primaryContained float-right' type="button" id="submit-comment" name="submit-comment" value="Add Comment">
			  </form>
			</div>

			<h2>Comments:</h2>
			<section>
				
				{{#each comment}}
				<div class="comment">
					<a href="#" id="edit">Edit</a>
					<p>{{comment}} </p><br><span><strong>Posted by: {{username}}</strong></span>
				</div>
				{{/each}}
			</section>
		</div>
